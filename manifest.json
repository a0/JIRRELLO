{
   "manifest_version": 2,
   "background": {
    "scripts": [ "jquery-2.1.4.min.js", "background.js" ],
	 "persistent": false
  },
   
   "browser_action": {
      "default_icon": "icon.png"
   },
   "content_scripts": [ {
      "css": [ "jirrello.css" ],
      "js": [ "jquery-2.1.4.min.js", "jirrello.js" ],
      "matches": [ "https://trello.com/*" ]
   } ],
   "description": "Jira from trello integration",
   "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" },
   "name": "JIRRELLO",
   "options_page": "options.html",
   "permissions": [ "http://*/*", "https://*/*" ],
   "version": "0.6"
}
